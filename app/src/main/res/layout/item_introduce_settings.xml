<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebc0d7"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="177dp"
        android:layout_height="47dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:text="Giới Thiệu"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="36sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="448dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:text="KidsTV là ứng dụng giúp cho các bé có thể xem hoạt hình, ca nhạc và đồng thời còn là nơi giúp các bé có thể học hỏi thêm nhiêu kiên thức. KidsTV có những tính năng đặc biệt như cho phụ huynh cài giờ để quản lý thời gian xem của bé tốt hơn, ngoài ra còn tính năng đặc biệt là có chọn lọc những video phù hợp với lứa tuổi của bé. "
        android:textColor="@android:color/background_dark"
        android:textSize="24sp" />

</RelativeLayout>