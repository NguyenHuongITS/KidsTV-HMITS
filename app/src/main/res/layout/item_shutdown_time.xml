<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f29c9c"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Đặt thời gian tắt"
        android:textColor="#000000"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView5"
        android:text="Khi hết giờ, ứng dụng sẽ bị tắt"
        android:textColor="#000000"
        android:textSize="18sp" />

    <SeekBar
        android:id="@+id/seekbar_settings"
        android:layout_width="251dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/txt_minus"
        android:layout_marginStart="96dp"
        android:max="60"
        android:progress="10" />

    <TextView
        android:id="@+id/txt_minus"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignBaseline="@+id/btn_plus"
        android:layout_alignParentStart="true"
        android:layout_marginStart="68dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_plus"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/seekbar_settings"
        android:layout_marginEnd="242dp"
        android:text="60"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_settime"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="238dp"
        android:layout_marginTop="161dp"
        android:background="#f29c9c"
        android:text="Hẹn giờ"
        android:textColor="#ff0000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_cancle"
        android:layout_width="60dp"
        android:layout_height="36dp"
        android:layout_alignTop="@+id/btn_settime"
        android:layout_toEndOf="@+id/seekbar_settings"
        android:background="#f29c9c"
        android:text="Hủy"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_plus"
        android:layout_width="41dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView6"

        android:layout_marginEnd="191dp"
        android:background="#f29c9c"
        android:drawableLeft="@drawable/icons8_plus_36" />

    <Button
        android:id="@+id/btn_minus"
        android:layout_width="38dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/textView6"
        android:background="#f29c9c"
        android:drawableLeft="@drawable/icons8_minus_36" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_below="@+id/btn_settime"
        android:background="#f29c9c"
        android:text="TextView"
        android:textColor="#f29c9c" />

</RelativeLayout>