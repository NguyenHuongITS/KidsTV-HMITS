<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.meowmeow.youtubekids">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.sensor.proximity"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.sensor.gyroscope"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".Model.SplashScreen"
            android:screenOrientation="landscape" >

        </activity>
        <activity
            android:name=".Model.UserActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Model.EditUserActivity"
            android:screenOrientation="landscape" >

        </activity>
        <activity
            android:name=".Model.RecommendedMovie"
            android:screenOrientation="landscape">

        </activity>
        <activity
            android:name=".Model.MusicMovie"
            android:screenOrientation="landscape" >

        </activity>
        <activity
            android:name=".Model.LearningMovie"
            android:screenOrientation="landscape" >

        </activity>
        <activity
            android:name=".Model.ExplorerMovie"
            android:screenOrientation="landscape">

        </activity>
        <activity
            android:name=".Model.SearchMovie"
            android:screenOrientation="landscape" >

        </activity>
        <activity
            android:name=".Model.ShowsMovie"
            android:screenOrientation="landscape" >

        </activity>
        <activity
            android:name=".Model.PlayVideoYTB"
            android:screenOrientation="landscape" >

        </activity>
        <activity android:name=".Model.TestActivity">

        </activity>
    </application>

</manifest>